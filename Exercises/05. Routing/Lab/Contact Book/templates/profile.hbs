<section id="profile">
    <div class="container">
        {{> header}}
        {{> navigation}}
        
        <div class="box-large">
            <h1>My Profile</h1>
            <div class="content">
                <div class="info">
                    <div class="col centered">
                        <span class="avatar">&#9787;</span>
                        <button>Change</button>
                    </div>
                    <div class="col">
                        <form class="profile-editor" action="#/profile" method="POST">
                            <label>First name:</label><input type="text" name="firstName" autocomplete="given-name" value="{{firstName}}" /><br>
                            <label>Last name:</label><input type="text" name="lastName" autocomplete="family-name" value="{{lastName}}" /><br>
                            <label>Phone:</label><input type="text" name="phone" autocomplete="tel-national" value="{{phone}}" /><br>
                            <label>E-mail:</label><input type="text" name="email" autocomplete="email" value="{{email}}" /><br>
                            <input type="submit" value="Save changes">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{> footer}}
    </div>
</section>